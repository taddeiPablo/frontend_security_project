extends layout

block content
  .max-w-4xl.mx-auto.py-10
    h2.text-xl.font-semibold.mb-4
      | Resultados del an√°lisis

    table.w-full.bg-white.shadow.rounded-lg.overflow-hidden
      thead.bg-gray-100
        tr
          th.px-4.py-2.text-left Severidad
          th.px-4.py-2.text-left Hallazgo
          th.px-4.py-2.text-left Impacto
      tbody
        each f in findings
          tr.border-t
            td.px-4.py-2.font-semibold= f.severity
            td.px-4.py-2= f.title
            td.px-4.py-2.text-sm.text-gray-600= f.impact